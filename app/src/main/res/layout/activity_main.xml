<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="دُر"
        android:textColor="@color/text_primary"
        android:textSize="64sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/subtitleText"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_player_count"
        android:textColor="@color/text_secondary"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"/>

    <!-- Player Count Buttons -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 4 Players -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4Players"
            style="@style/PlayerCountButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/players_4"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teams_2"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- 6 Players -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6Players"
            style="@style/PlayerCountButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/players_6"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teams_3"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- 8 Players -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8Players"
            style="@style/PlayerCountButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/players_8"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teams_4"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- 10 Players -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn10Players"
            style="@style/PlayerCountButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/players_10"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teams_5"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
