<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".GameActivity">

    <!-- Team Timers Container at top -->
    <HorizontalScrollView
        android:id="@+id/timersScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/teamTimersContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center"/>

    </HorizontalScrollView>

    <!-- Bomb Timer -->
    <TextView
        android:id="@+id/bombTimerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ’£ 25"
        android:textColor="@color/timer_warning"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timersScrollView"/>

    <!-- Center Game Area -->
    <FrameLayout
        android:id="@+id/gameAreaContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bombTimerText"
        android:layout_margin="16dp">

        <!-- Center Table with Word -->
        <androidx.cardview.widget.CardView
            android:id="@+id/centerTableCard"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="140dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Player Name (shown before turn starts) -->
                <TextView
                    android:id="@+id/playerNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ù†Ø§Ù… Ø¨Ø§Ø²ÛŒÚ©Ù†"
                    android:textColor="@color/text_primary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <!-- Tap to start instruction -->
                <TextView
                    android:id="@+id/tapToStartText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_to_start"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"/>

                <!-- Word (shown during gameplay) -->
                <TextView
                    android:id="@+id/wordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ú©Ù„Ù…Ù‡"
                    android:textColor="@color/accent"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="gone"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Explosion Effect Overlay -->
        <View
            android:id="@+id/explosionOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/accent"
            android:alpha="0"
            android:visibility="gone"/>

    </FrameLayout>

    <!-- Bottom Container -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Next Turn Info -->
        <TextView
            android:id="@+id/nextTurnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ù†ÙˆØ¨Øª Ø¨Ø¹Ø¯ÛŒ: ..."
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Skip Word Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/skipButton"
            style="@style/GameButton.Secondary"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/skip_word"
            android:enabled="false"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
