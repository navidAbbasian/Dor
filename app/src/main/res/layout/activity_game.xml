<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true"
    tools:context=".GameActivity">

    <!-- Pause Button -->
    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_media_pause"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/pause"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_primary"/>

    <!-- Team Timers Container at top -->
    <HorizontalScrollView
        android:id="@+id/timersScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/pauseButton">

        <LinearLayout
            android:id="@+id/teamTimersContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center"/>

    </HorizontalScrollView>

    <!-- Bomb Timer -->
    <TextView
        android:id="@+id/bombTimerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ’£ 25"
        android:textColor="@color/timer_warning"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timersScrollView"/>

    <!-- Center Game Area -->
    <com.example.dor.views.CircularPlayerLayout
        android:id="@+id/circularGameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bombTimerText"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="8dp">

        <!-- Center Table with Word - MUST be first child -->
        <androidx.cardview.widget.CardView
            android:id="@+id/centerTableCard"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="90dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Player Name (shown before turn starts) -->
                <TextView
                    android:id="@+id/playerNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ù†Ø§Ù… Ø¨Ø§Ø²ÛŒÚ©Ù†"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <!-- Tap to start instruction -->
                <TextView
                    android:id="@+id/tapToStartText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_to_start"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"/>

                <!-- Word (shown during gameplay) -->
                <TextView
                    android:id="@+id/wordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ú©Ù„Ù…Ù‡"
                    android:textColor="@color/accent"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="gone"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Player indicators will be added programmatically as children -->

    </com.example.dor.views.CircularPlayerLayout>

    <!-- Rotation Direction Indicator - subtle arc with arrow -->
    <com.example.dor.views.RotationIndicatorView
        android:id="@+id/rotationIndicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bombTimerText"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="8dp"
        android:elevation="1dp"/>

    <!-- Explosion Effect Overlay -->
    <FrameLayout
        android:id="@+id/explosionOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bombTimerText">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/accent"/>

        <TextView
            android:id="@+id/penaltyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="-Û±Ûµ Ø«Ø§Ù†ÛŒÙ‡"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>

    </FrameLayout>

    <!-- Bottom Container -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Next Turn Info -->
        <TextView
            android:id="@+id/nextTurnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ù†ÙˆØ¨Øª Ø¨Ø¹Ø¯ÛŒ: ..."
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Skip Word Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/skipButton"
            style="@style/GameButton.Secondary"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/skip_word"
            android:enabled="false"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
