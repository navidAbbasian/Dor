<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/button_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <!-- RTL Support -->
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
    </style>

    <!-- Button Styles -->
    <style name="GameButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/button_primary</item>
    </style>

    <style name="GameButton.Secondary">
        <item name="backgroundTint">@color/button_secondary</item>
    </style>

    <style name="PlayerCountButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">24dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>